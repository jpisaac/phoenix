<datamodel name="model_1">
    <datamapping>
        <column>
            <!-- This column type defines what will generally happen to VARCHAR fields unless they are explicitly defined or overridden elsewhere -->
            <type>VARCHAR</type>
            <dataSequence>RANDOM</dataSequence>
            <length>15</length>
            <name>GENERAL_VARCHAR</name>
        </column>
    </datamapping>
    <scenarios>
        <scenario tableName="PHERF.EVT_GEN1" name="EVT_GEN1">
            <loadProfile>
                <batchSize>1</batchSize>
                <numOperations>1000</numOperations>
                <tenantDistribution id="t1" weight="10" numTenants="10"></tenantDistribution>
                <tenantDistribution id="t2" weight="10" numTenants="10"></tenantDistribution>
                <tenantDistribution id="t3" weight="80" numTenants="10"></tenantDistribution>
                <opDistribution id="op1" weight="50"></opDistribution>
                <opDistribution id="op2" weight="0"></opDistribution>
                <opDistribution id="op3" weight="0"></opDistribution>
                <opDistribution id="op4" weight="50"></opDistribution>
                <opDistribution id="op5" weight="0"></opDistribution>
            </loadProfile>
            <upserts>
                <upsert id="op1">
                    <column>
                        <type>CHAR</type>
                        <name>COLUMN1</name>
                    </column>
                </upsert>
            </upserts>

            <querySet>
                <query id="op2" statement="select count(*) from PHERF.Z11"/>
                <query id="op3" statement="select sum(SOME_INT) from PHERF.Z11"/>
            </querySet>
            <noops>
                <noop id="op4" idleTime="50"></noop>
            </noops>
            <ufds>
                <udf id="op5" >
                    <clazzName>org.apache.phoenix.pherf.ConfigurationParserTest.TestUDF</clazzName>
                    <args>Hello</args>
                    <args>World</args>
                </udf>
            </ufds>
        </scenario>
    </scenarios>
</datamodel>
